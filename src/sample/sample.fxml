<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="center" prefHeight="275" prefWidth="400" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <TextArea fx:id="textArea" editable="false" prefHeight="250" prefWidth="400">
         <font>
            <Font size="18.0" />
         </font>
      </TextArea>
      <HBox prefHeight="25" prefWidth="300">
         <children>
            <TextField fx:id="textField" onAction="#send" prefWidth="325" />
            <Button mnemonicParsing="false" onAction="#send" prefWidth="75" style="-fx-background-color: black;" text="Отправить" textAlignment="CENTER" textFill="RED" underline="true" />
         </children>
      </HBox>
      <Button fx:id="connectBtn" onAction="#connect" prefHeight="25" prefWidth="Infinity" text="Подключиться" />
   </children>
</VBox>
